<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/game_ticket_bg"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large"
        >

        <TextView
            android:id="@+id/textView"
            style="@style/TextAppearance.AppCompat.SearchResult.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:gravity="center"
            android:text="Coins Board"
            android:textColor="@color/theme_color1"
            android:textStyle="bold" />

        <View
            android:id="@+id/above_view"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/theme_color3"
            android:layout_below="@+id/textView"
            >

        </View>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/previous_numbers_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            android:layout_below="@+id/above_view"
             />

    </RelativeLayout>

</RelativeLayout>