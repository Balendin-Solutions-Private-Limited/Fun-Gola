<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:background="@drawable/wallet_image1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit ="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="     Change Password     "
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            style="@android:style/TextAppearance.Medium"
                            android:textStyle="normal"
                            android:id="@+id/popup_otp"/>

                        <RelativeLayout
                            android:id="@+id/et_resetpassword_lay"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/spacing_middle"
                            android:background="@drawable/game_dailog_bg"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <com.google.android.material.textfield.TextInputEditText

                                    android:id="@+id/et_resetpassword"

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="-4dp"
                                    android:background="@null"
                                    android:drawableTint="@color/theme_color1"
                                    android:drawablePadding="@dimen/spacing_middle"
                                    android:ems="10"
                                    android:hint="Old Password"
                                    android:inputType="text"
                                    android:maxLength="50"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textColor="@color/theme_color1"

                                    android:textColorHint="@color/theme_color3"
                                    android:textStyle="normal" />
                            </LinearLayout>
                        </RelativeLayout>
                        <!--<EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Old Password"
                            android:padding="5dp"
                            android:inputType="textPassword"
                            android:id="@+id/et_resetpassword"
                            android:layout_margin="15dp"
                            android:fontFamily="sans-serif"
                            android:background="@drawable/changebutton"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >
                            <requestFocus></requestFocus>
                        </EditText>-->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/spacing_middle"
                            android:background="@drawable/game_dailog_bg"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <com.google.android.material.textfield.TextInputEditText

                                    android:id="@+id/et_NPasrd"

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="-4dp"
                                    android:background="@null"
                                    android:drawableTint="@color/theme_color1"
                                    android:drawablePadding="@dimen/spacing_middle"
                                    android:ems="10"
                                    android:hint="New Password"
                                    android:inputType="text"
                                    android:maxLength="50"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textColor="@color/theme_color1"

                                    android:textColorHint="@color/theme_color3"
                                    android:textStyle="normal" />
                            </LinearLayout>
                        </RelativeLayout>
                        <!--<EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="New Password"
                            android:padding="5dp"
                            android:inputType="textPassword"
                            android:id="@+id/et_NPasrd"
                            android:layout_margin="15dp"
                            android:fontFamily="sans-serif"
                            android:background="@drawable/changebutton"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >
                            <requestFocus></requestFocus>
                        </EditText>-->

                        <!--<EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Confirm Password"
                            android:padding="5dp"
                            android:id="@+id/et_CNPasrd"
                            android:inputType="textPassword"
                            android:layout_margin="15dp"
                            android:fontFamily="sans-serif"
                            android:background="@drawable/game_dailog_bg"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >


                        </EditText>-->
                        <RelativeLayout
                            android:id="@+id/et_CNPasrd_lay"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/spacing_middle"
                            android:background="@drawable/game_dailog_bg"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <com.google.android.material.textfield.TextInputEditText

                                    android:id="@+id/et_CNPasrd"

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="-4dp"
                                    android:background="@null"
                                    android:drawableTint="@color/theme_color1"
                                    android:drawablePadding="@dimen/spacing_middle"
                                    android:ems="10"
                                    android:hint="Confirm Password"
                                    android:inputType="text"
                                    android:maxLength="50"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textColor="@color/theme_color1"

                                    android:textColorHint="@color/theme_color3"
                                    android:textStyle="normal" />
                            </LinearLayout>
                        </RelativeLayout>

                        <Button
                            android:id="@+id/btn_PCHsubmit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/profile_geder_unselect"
                            android:gravity="center_horizontal|center"
                            android:text="        Submit        "
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:foreground="?selectableItemBackgroundBorderless"/>

                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>

            <ImageView
                android:id="@+id/btn_pss_cancel"
                android:layout_width="15dp"
                android:layout_height="14dp"
                android:layout_gravity="right|top"
                android:padding="5dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/ic_clear"
                android:tint="@color/colorPrimary" />

        </FrameLayout>

    </FrameLayout>
</RelativeLayout>